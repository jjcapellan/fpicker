:root {
    --background-color: #a2a2a2;
    --background-color-sidebar: #e1e9ec;
    --color-text-hover: #c51818;
    --background-color-content: #f6f8f3;
    --background-color-bar: #546c78;
    --color-bar: var(--background-color-sidebar);
    --color-text-dark: #2a363c;
    --background-color-button: var(--color-text-dark);
    --color-button: var(--background-color-sidebar);
    --background-color-button-hover: #9fb2bc;
    --color-button-hover: var(--color-text-dark);

    --height-bar: 3.5rem;
    --height-sidebar: calc(100% - (2 * var(--height-bar)));
    --height-content: var(--height-sidebar);

    --width-size-column: 10ch;

    --font-family-body: Helvetica, Arial, sans-serif;
    --font-size-body: 16px;
}

* {
    box-sizing: border-box;
    font-kerning: auto;
    text-rendering: optimizeLegibility;
    margin: 0;
    padding: 0;
}

html {
    font-family: var(--font-family-body);
    font-size: var(--font-size-body);
}

body {
    height: 100vh;
}

.master {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;

    height: 100%;

    display: flex;
    align-items: center;
    justify-content: center;

    background-color: var(--background-color);
}

.container {
    width: 960px;
    height: 86%;

    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;

    box-shadow: 1px 1px 6px var(--background-color-bar);
}

.breadcrumb {
    width: 100%;
    height: 100%;

    display: flex;
    align-items: center;
    gap: 0.4rem;
    overflow: hidden;

    color: var(--background-color-content);
}

.breadcrumb>span {
    flex: 0 1 auto;
    overflow: hidden;

    color: inherit;
    transition: flex-shrink .3s;

    font-weight: bold;
    text-overflow: ellipsis;
}

.breadcrumb>span:hover {
    flex-shrink: 0;
}

.breadcrumb>span:first-child {
    flex-shrink: 0;
}

.breadcrumb>span:nth-last-child(2) {
    flex-shrink: 0;
}

.breadcrumb>span:last-child {
    flex-shrink: 0;
}

.bar {
    width: 100%;
    height: var(--height-bar);
    padding: 0 1rem;

    display: flex;
    align-items: center;
    gap: 0.5rem;


    background-color: var(--background-color-bar);
    color: var(--color-bar);
}

.bar-icon {
    width: 24px;
    height: 24px;

    fill: none;
    stroke: var(--background-color-content);
}

.bar-state {
    color: inherit;
}

.toggle {
    position: absolute;
    top: -200%;
}

.toggle-icon {
    opacity: 0.5;    
}

.toggle:checked + svg {
    opacity: 1;
}

.button {
    padding: 0.5rem 1rem;

    background-color: var(--background-color-button);
    color: var(--color-button);
    transition: background-color .3s;

    border: none;
    border-radius: 4px;

    cursor: pointer;
}

.button:hover {
    background-color: var(--background-color-button-hover);
    color: var(--color-button-hover);
}

.sidebar {
    width: 20%;
    height: var(--height-sidebar);
    padding-top: 2rem;

    background-color: var(--background-color-sidebar);
}

.sidebar-item {
    padding: 0.2rem 0.2rem 0.2rem 1rem;

    display: flex;
    align-items: center;
    gap: 0.5rem;

    color: var(--color-text-dark);
}

.sidebar-selected {
    font-weight: bold;
}

.sidebar-label {
    flex: 1;
    overflow: hidden;

    white-space: nowrap;
    text-overflow: ellipsis;

    cursor: pointer;
}

.sidebar-item:hover {
    color: var(--color-text-hover);
}

.sidebar-icon {
    fill: none;
    stroke: var(--color-text-dark);
}

.content {
    width: 80%;
    height: var(--height-content);
    padding-top: 2rem;

    display: block;
    overflow-x: hidden;
    overflow-y: auto;

    background-color: var(--background-color-content);
}

.content-item {
    max-height: 8rem;
    padding: 0.4rem;

    display: flex;
    align-items: center;
    gap: 0.5rem;
    overflow: hidden;

    color: var(--color-text-dark);

    word-break: break-all;

    cursor: pointer;
}

.content-icon {
    width: 24px;
    height: 24px;

    fill: none;
    stroke: var(--color-text-dark);
}

.content-label {
    flex: 1;
    overflow: hidden;

    white-space: nowrap;
    text-overflow: ellipsis;
}

.content-size {
    width: var(--width-size-column);
    margin-left: auto;

    text-align: right;
}

.content-time {
    margin-left: 0.5rem;
}


/*
* Utility classes
*/

.sep {
    margin-left: auto;
}

.pointer {
    cursor: pointer;
}